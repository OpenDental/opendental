<local:FrmODBase x:Class="OpenDental.FrmWikiSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpenDental"
             xmlns:ui="clr-namespace:WpfControls.UI"
             mc:Ignorable="d"
             Width="944" Height="753" 
             Text="Wiki Setup" Loaded="FrmWikiSetup_Loaded" >
	<Grid Background="#FFFCFDFE" >
		<ui:Button x:Name="butSave" HorizontalAlignment="Right" Width="75" VerticalAlignment="Bottom" Height="24" Margin="0,0,12,12" Text="Save" Click="butSave_Click" />
		<ui:CheckBox x:Name="checkCreatePageFromLinks" Width="230" VerticalAlignment="Bottom" Height="19" Margin="14,0,0,12" Text="Allow new wiki pages from links" CheckAlign="MiddleRight" />
		<ui:CheckBox x:Name="checkDetectLinks" Width="230" VerticalAlignment="Bottom" Height="19" Margin="14,0,0,33" Text="Detect wiki links in textboxes and grids" CheckAlign="MiddleRight" />
		<ui:Label x:Name="label1" Width="154" Height="16" Margin="12,9,0,0" Text="Master Page:" VAlign="Bottom" />
		<ui:TextBox x:Name="textMaster" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="12,28,12,58" />
	</Grid>
</local:FrmODBase>