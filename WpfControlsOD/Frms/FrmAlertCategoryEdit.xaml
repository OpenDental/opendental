<local:FrmODBase x:Class="OpenDental.FrmAlertCategoryEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpenDental"
             xmlns:ui="clr-namespace:WpfControls.UI"
             mc:Ignorable="d"
             Width="328" Height="245" 
             Text="Alert Category Edit" Loaded="FrmAlertCategoryEdit_Loaded" >
    <Grid Background="#FFFCFDFE" >
        <ui:Button x:Name="butDelete" Width="81" VerticalAlignment="Bottom" Height="26" Margin="12,0,0,12" Text="Delete" Icon="DeleteX" Click="butDelete_Click" />
        <ui:TextBox x:Name="textDesc" HorizontalAlignment="Right" Width="156" Height="20" Margin="0,8,12,0" />
        <ui:Label x:Name="label2" HorizontalAlignment="Right" Width="121" Height="12" Margin="0,11,168,0" Text="Description" HAlign="Right" VAlign="Center" />
        <ui:ListBox x:Name="listBoxAlertTypes" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="12,34,12,51" SelectionMode="MultiExtended" PreviewMouseDown="listBoxAlertTypes_PreviewMouseDown"/>
        <ui:Button x:Name="butSave" HorizontalAlignment="Right" Width="75" VerticalAlignment="Bottom" Height="24" Margin="0,0,10,12" Text="_Save" Click="butSave_Click" />
    </Grid>
</local:FrmODBase>