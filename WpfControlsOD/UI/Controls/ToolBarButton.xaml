<UserControl x:Class="WpfControls.UI.ToolBarButton"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:WpfControls.UI"
		mc:Ignorable="d" 
		d:DesignHeight="20" d:DesignWidth="75">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/><!--Image. if no image in first column, its width will be 0.-->
			<ColumnDefinition Width="*"/><!--Text-->
			<ColumnDefinition Width="1"/><!--Line on right-->
		</Grid.ColumnDefinitions>
		<Grid.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
				<GradientStop Color="White" Offset="0.0" />
				<GradientStop Color="#ABB5D1" Offset="1.0" />
			</LinearGradientBrush>
		</Grid.Background>
		<Border x:Name="border" Grid.ColumnSpan="2" BorderBrush="Transparent" BorderThickness="1"/><!--No content because it overlays without shifting anything under it.-->
		<Image x:Name="image" Margin="3,0,3,0"></Image><!--left and right-->
		<TextBlock Grid.Column="1" x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3,0,4,0"/>
		<Line Grid.Column="2" Stroke="DarkGray" Stretch="Fill" Y2="1"/>
	</Grid>
</UserControl>
