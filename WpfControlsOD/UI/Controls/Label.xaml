<UserControl x:Class="WpfControls.UI.Label"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:WpfControls.UI"
		mc:Ignorable="d" 
		x:Name="label"
		d:DesignHeight="20" d:DesignWidth="75">
	<UserControl.Style>
		<Style>
			<Setter Property="local:Label.HorizontalAlignment" Value="Left"/>
			<Setter Property="local:Label.VerticalAlignment" Value="Top"/>
		</Style>
	</UserControl.Style>
	<UserControl.Template>
		<ControlTemplate TargetType="UserControl">
			<ContentPresenter/>
		</ControlTemplate>
	</UserControl.Template>
	<Grid Name="grid" x:FieldModifier="internal" Background="Transparent">
		<TextBlock Name="textBlock" x:FieldModifier="internal" Padding="3,0,5,0" TextWrapping="Wrap">
			Label
		</TextBlock>
	</Grid>
</UserControl>
