<UserControl x:Class="WpfControls.UI.LinkLabel"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:WpfControls.UI"
		mc:Ignorable="d" 
		d:DesignHeight="20" d:DesignWidth="100">
	<UserControl.Style>
		<Style>
			<Setter Property="local:Label.HorizontalAlignment" Value="Left"/>
			<Setter Property="local:Label.VerticalAlignment" Value="Top"/>
		</Style>
	</UserControl.Style>
	<Grid Name="grid" Background="White">
		<TextBlock Name="textBlock" Padding="3,0,5,0" TextWrapping="Wrap">
		Link Label
		</TextBlock>
	</Grid>
</UserControl>
