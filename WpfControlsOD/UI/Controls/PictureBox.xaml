<UserControl x:Class="WpfControls.UI.PictureBox"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:WpfControls.UI"
		mc:Ignorable="d" 
		d:DesignHeight="100" d:DesignWidth="100">
	<UserControl.Style>
		<Style>
			<Setter Property="local:PictureBox.HorizontalAlignment" Value="Left"/>
			<Setter Property="local:PictureBox.VerticalAlignment" Value="Top"/>
		</Style>
	</UserControl.Style>
	<Border x:Name="border" x:FieldModifier="internal" BorderThickness="1" BorderBrush="Transparent">
			<!--No content because it overlays without shifting anything under it.-->
		<Image x:Name="image" x:FieldModifier="internal" Stretch="None"/>
	</Border>

</UserControl>
